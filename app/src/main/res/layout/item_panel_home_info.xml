<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_home">

    <include
        android:id="@+id/itemStatusAirMessage"
        layout="@layout/item_quality_status_air_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListAirForecast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemStatusAirMessage" />

    <include
        android:id="@+id/itemInfoListAirToday"
        layout="@layout/item_info_list_air_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rvListAirForecast" />

    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/itemInfoListAirToday" />

</RelativeLayout>